@model crud.Models.nhanvien

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm nhân viên</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ten" class="control-label"></label>
                <input asp-for="ten" class="form-control" />
                <span asp-validation-for="ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vitri" class="control-label"></label>
                <input asp-for="vitri" class="form-control" />
                <span asp-validation-for="vitri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="luong" class="control-label"></label>
                <input asp-for="luong" class="form-control" />
                <span asp-validation-for="luong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách nhân viên</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
